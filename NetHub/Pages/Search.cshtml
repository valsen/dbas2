@page
@model SearchModel
@using System.Text
@using System.Collections.Generic
@{
    ViewData["Title"] = "Search page";
}
<h2>Movies</h2>
<br />
    <form>
        <p>
            <i class="fas fa-search"></i>
            <input type="text" placeholder="movie" name="SearchString">
            <select asp-for="SelectGenre" asp-items="Model.Genres">
                <option value="">Genre</option>
            </select>
            <input type="text" placeholder="actor" name="SearchActor">
            <input type="submit" value="Filter" />
        </p>
    </form>
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">Title</th>
                <th scope="col">Year</th>
                <th scope="col">Runtime</th>
                <th scope="col">Genre</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Movies) {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Year</td>
                    <td>@item.Runtime</td>
                    <td>@item.Genre</td>
                </tr>
            }
        </tbody>
    </table>

